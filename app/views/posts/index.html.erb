<h1>All Posts</h1>
<%= link_to "New Post", new_post_path %>
<br><br>

<div class="posts">
  <% @posts.each do |post| %>
  <div class="post">
    <%= link_to post.title, post_path(post) %>

    (<%= link_to "Edit", edit_post_path(post) %> | <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" } %>)
  </div> <!--.post -->
  <% end %>
</div>
